datasource db {
  provider = "postgresql"
  url      = "$url"
}

model Post {
  post_id    Int      @id @default(autoincrement())
  content    String?
  title      String
  author     User?
}

model Profile {
  profile_id Int     @id @default(autoincrement())
  bio        String?
  user       User
}

model User {
  user_id  Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  posts    Post[]
  profiles Profile[]
}

